@if (Model.Count() > 0)
{
<div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-restaurant">
    <div class="row">
        <h3 style="color:black"> @Model.FirstOrDefault().Category.Name </h3>
    </div>
    <div class="card-deck">
        @foreach (var item in Model)
        {

<div class="card" style="max-width:30%;">
    <img src="@item.Image" asp-append-version="true" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />

    <div class="card-body">
        <h5 class="card-title">@item.Name</h5>
        <h4>$@item.Price</h4>
        <p>@Html.Raw(item.Description)</p>
        @if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.CustomerEndUser) || User.IsInRole(SD.FrontDeskUser) || User.IsInRole(SD.KitchenUser))
        {
<a asp-action="Details" asp-route-id="@item.Id" class="btn" style="width:100%;background-color:black;color:white">View Details</a>}
        @if (!(User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.CustomerEndUser) || User.IsInRole(SD.FrontDeskUser) || User.IsInRole(SD.KitchenUser)))
        {
<a asp-area="Identity" asp-page="/Account/Login" class="btn" style="width:100%;background-color:black;color:white"> Please log in to order</a>}








    </div>
</div> @*<div class="border border-info rounded col-12 bg-white" style="margin-bottom:10px; margin-top:10px; padding:10px">
